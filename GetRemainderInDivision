using System;

namespace EvenOrOdd
{
    class Program
    {
        static void Main(string[] args)
        {

            for (int i = 0; i < 16; i++)
            {
                if (i % 2 == 0) //"%" symbol gives the remainder value
                    Console.WriteLine(i + "is Even");
                else
                    Console.WriteLine(i + "is Odd");
            }
            Console.ReadLine();
        }

    }
